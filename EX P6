#EX 92

x= int(input("nombre"))
c=0
b=0
while x!=1:
    if x %2==0:
        x=x//2
    else:
        x=x*3+1
    if x>b:
        b=x
    c=c+1
    print (x)
print ("nombre plus grand",b)
print ("nombre detapes",c)


# EX 93

C=0
B=0
V=0
N=0
M=0
for i in range (1,20):
    c=0
    x=i
    b=0
    while x!=1:
        if x %2==0:
            x=x//2
        else:
            x=x*3+1
        if x>b:
            b=x
        c=c+1
    if c>C:
        C=c
        V=i
    if b>B:
        B=b
        N=i
    if i!=1:
        if c==B:
            M=i
    print ("nombre detapes pour",i,":",c,"nombre max:",b)
print("le nomre avec les plus grand maximum",N)
if M==0:
    print("le nomre avec les plus detapes est",V)
else:
    print("le nomres avec les plus detapes sont",V,"et",M)
    
    
